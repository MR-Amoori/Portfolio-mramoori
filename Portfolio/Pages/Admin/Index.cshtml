@page
@model Portfolio.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "داشبورد";
}

<div class="display-5 fw-bold text-center">
    اطلاعات کاربر
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>نام و نام خانوادگی</th>
                <th>سن</th>
                <th>شماره</th>
                <th>ایمیل</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@(Model.viewIndex.Personal.FirstName + " " + Model.viewIndex.Personal.LastName)</td>
                <td>@Model.viewIndex.Personal.Age</td>
                <td>@Model.viewIndex.Personal.Mobile</td>
                <td>@Model.viewIndex.Personal.Email</td>
                <td>
                    <a asp-page="Personal/EditPersonal" asp-route-id="@Model.viewIndex.Personal.Id" class="btn btn-warning">
                        ویرایش
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<br />

<hr />

<br />

<div class="display-5 fw-bold text-center">
    مهارت ها
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>نام مهارت</th>
                <th>درصد</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var skill in Model.viewIndex.Skills)
            {
                <tr>
                    <td>@skill.Name</td>
                    <td>@skill.Percentage</td>
                    <td>
                        <a asp-page="/Admin/Skill/EditSkill" asp-route-id="@skill.Id" class="btn btn-warning">
                            ویرایش
                        </a>
                        |
                        <a asp-page="/Admin/Skill/DeleteSkill" asp-route-id="@skill.Id" class="btn btn-danger">
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/Skill/AddSkill" class="btn btn-success">افزودن</a>
</div>


<br />

<hr />

<br />

<div class="display-5 fw-bold text-center">
    خدمات
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>نام سرویس</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model.viewIndex.Service)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>
                        <a asp-page="/Admin/Service/EditService" asp-route-id="@service.Id" class="btn btn-warning">
                            ویرایش
                        </a>
                        |
                        <a asp-page="/Admin/Service/DeleteService" asp-route-id="@service.Id" class="btn btn-danger">
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/Service/AddService" class="btn btn-success">افزودن</a>
</div>

<br />

<hr />

<br />

<div class="display-5 fw-bold text-center">
    نمونه کار ها
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>نام نمونه کار</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var portfolio in Model.viewIndex.Portfolios)
            {
                <tr>
                    <td>@portfolio.Title</td>
                    <td>
                        <a asp-page="/Admin/PortfolioAd/EditPortfolio" asp-route-id="@portfolio.Id" class="btn btn-warning">
                            ویرایش
                        </a>
                        |
                        <a asp-page="/Admin/PortfolioAD/DeletePortfolio" asp-route-id="@portfolio.Id" class="btn btn-danger">
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/PortfolioAd/AddPortfolio" class="btn btn-success">افزودن</a>
</div>

<br />

<hr />

<br />

<div class="display-5 fw-bold text-center">
    وبلاگ
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>نام بلاگ</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in Model.viewIndex.Blogs)
            {
                <tr>
                    <td>@blog.Title</td>
                    <td>
                        <a asp-page="/Admin/Blog/EditBlog" asp-route-id="@blog.Id" class="btn btn-warning">
                            ویرایش
                        </a>
                        |
                        <a asp-page="/Admin/Blog/DeleteBlog" asp-route-id="@blog.Id" class="btn btn-danger">
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a href="/Admin/Blog/AddBlog" class="btn btn-success">افزودن</a>
</div>

<br />

<hr />

<br />

<div class="display-5 fw-bold text-center">
    پیام ها
</div>

<br />

<div class="align-content-center text-center">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>فرستنده</th>
                <th>ایمیل</th>
                <th>تاریخ</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model.ContactsViewModel)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Email</td>
                    <td>@contact.CreateDate</td>
                    <td>
                        <a asp-page="/Admin/Contact/ShowContact" asp-route-id="@contact.Id" class="btn btn-primary">
                            مشاهده
                        </a>
                        |
                        <a asp-page="/Admin/Contact/DeleteContact" asp-route-id="@contact.Id" class="btn btn-danger">
                            حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>