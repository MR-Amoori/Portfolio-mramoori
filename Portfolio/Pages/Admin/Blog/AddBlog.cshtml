@page
@model Portfolio.Pages.Admin.Blog.AddBlogModel

@{
    ViewData["Title"] = "افزودن بلاگ";
}

<h1>افزودن بلاگ</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label">عنوان</label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Blog.Description" class="control-label">توضیحات</label>
                <input asp-for="Blog.Description" class="form-control" />
                <span asp-validation-for="Blog.Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Blog.Link" class="control-label">لینک</label>
                <input asp-for="Blog.Link" class="form-control" />
                <span asp-validation-for="Blog.Link" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Blog.ImagePath" class="control-label">آدرس تصویر</label>
                <input asp-for="Blog.ImagePath" class="form-control" />
                <span asp-validation-for="Blog.ImagePath" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="/Admin/Index" class="btn btn-secondary">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
