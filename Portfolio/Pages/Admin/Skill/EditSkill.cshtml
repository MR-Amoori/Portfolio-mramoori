@page
@model Portfolio.Pages.Admin.Skill.EditSkillModel

@{
    ViewData["Title"] = "EditSkill";
}

<h1>ویرایش مهارت</h1>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Skill.Id" />
            <div class="form-group">
                <label asp-for="Skill.Name" class="control-label">نام مهارت</label>
                <input asp-for="Skill.Name" class="form-control" />
                <span asp-validation-for="Skill.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Skill.Percentage" class="control-label">درصد</label>
                <input asp-for="Skill.Percentage" class="form-control" />
                <span asp-validation-for="Skill.Percentage" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="/Admin/Index" class="btn btn-secondary">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
