@page
@model Portfolio.Pages.Admin.Skill.AddSkillModel

@{
    ViewData["Title"] = "AddSkill";
}

<h1>AddSkill</h1>

<h4>Skill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
