                <label asp-for="Skill.Name" class="control-label"></label>
                <input asp-for="Skill.Name" class="form-control" />
                <span asp-validation-for="Skill.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Skill.Percentage" class="control-label"></label>
                <input asp-for="Skill.Percentage" class="form-control" />
                <span asp-validation-for="Skill.Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
